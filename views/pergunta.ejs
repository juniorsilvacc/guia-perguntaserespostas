<%- include("partials/header.ejs"); %>
<body>
    <%- include("partials/nav-bar.ejs"); %>

    <div class="container">
        <div class="area-pergunta">
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %></p>
            <form action="/responder" method="POST">
                <h3>Responda</h3>
                <label for="">Resposta:</label>
                <textarea name="corpo" id="" placeholder="Digite sua resposta" class="form-control"></textarea><br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-dark">Responder</button>
            </form>
            
            <h3 class="titulo-resposta">Respostas</h3>
            <% respostas.forEach(resposta => { %><br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    
<%- include("partials/footer.ejs"); %>
</body>